<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="jpa-config">
        <class>com.ohgiraffers.valueobject.chap01.section02.Reservation</class>

        <class>com.ohgiraffers.valueobject.chap02.section01.AvailableSize</class>
        <class>com.ohgiraffers.valueobject.chap02.section01.Product</class>

        <class>com.ohgiraffers.valueobject.chap02.section02.Product</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpa_lecture"/>
            <property name="jakarta.persistence.jdbc.user" value="gorilla"/>
            <property name="jakarta.persistence.jdbc.password" value="gorilla"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hdm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>

</persistence>